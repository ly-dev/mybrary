name = Mybrary Theme
description = Customized theme for Mybrary based on bootstrap.
core = 7.x

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;
;; -------------------------
;;          page_top
;; -------------------------
;;          header
;; -------------------------
;; 			content
;;
;; -------------------------
;;          footer
;; -------------------------
;;          bottom
;; -------------------------
;;
;;;;;;;;;;;;;;;;;;;;;

regions[page_top]       = 'Page top'
regions[header]         = 'Header'
regions[content]        = 'Content'
regions[footer]         = 'Footer'
regions[page_bottom]    = 'Page bottom'

; Hidden regions from block admin
; --------------
regions_hidden[] = 'page_top'
regions_hidden[] = 'page_bottom'

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

; Fontawesome
; copy from vendors/fontawesome/css
; --------------
stylesheets[all][] = 'lib/fontawesome/css/font-awesome.min.css'

; Bootstrap
; --------------
stylesheets[all][] = 'css/bootstrap.css'

; Project
; --------------
stylesheets[all][] = 'css/mybrary.css'


; ;;;;;;;;;;;;;;;;;;;;;
; ;; Scripts
; ;;;;;;;;;;;;;;;;;;;;;

; Bootstrap
; --------------
scripts[] = 'lib/bootstrap/dist/js/bootstrap.min.js'

; Loadash
; --------------
scripts[] = 'lib/lodash/lodash.min.js'

; Angular
; --------------
scripts[] = 'lib/angular/angular.min.js'
scripts[] = 'lib/angular-animate/angular-animate.min.js.map'
scripts[] = 'lib/angular-sanitize/angular-sanitize.min.js'
scripts[] = 'lib/angular-ui-router/release/angular-ui-router.min.js'

; Project
; --------------
scripts[] = 'js/mybrary.js'
