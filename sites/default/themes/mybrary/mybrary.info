name = Mybrary Theme
description = Customized theme for Mybrary based on bootstrap.
core = 7.x

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;
;; -------------------------
;;          page_top
;; -------------------------
;;          highlighted
;; -------------------------
;;          header (menu, slideshow)
;; -------------------------
;; sidebar  | help
;;          |---------------
;;          | content
;;          |
;;          |
;;          |
;; -------------------------
;;          footer
;; -------------------------
;;          bottom
;; -------------------------
;;
;;;;;;;;;;;;;;;;;;;;;

regions[page_top]       = 'Page top'
regions[highlighted]    = 'Highlighted'
regions[header]         = 'Header'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[footer]         = 'Footer'
regions[page_bottom]    = 'Page bottom'

; Hidden regions from block admin
; --------------
regions_hidden[] = 'page_top'
regions_hidden[] = 'page_bottom'
regions_hidden[] = 'header'
regions_hidden[] = 'footer'

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

; Bootstrap
; --------------
stylesheets[all][] = css/bootstrap.css

; Fontawesome
; copy from vendors/fontawesome/css
; --------------
stylesheets[all][] = css/font-awesome.min.css

; Project
; --------------
stylesheets[all][] = css/mybrary.css


; ;;;;;;;;;;;;;;;;;;;;;
; ;; Scripts
; ;;;;;;;;;;;;;;;;;;;;;

; Bootstrap
; copy from vendors/bootstrap/dist/js/bootstrap.min.js
; --------------
scripts[] = 'js/bootstrap.min.js'

; Project
; --------------
scripts[] = 'js/mybrary.js'
